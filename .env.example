# Environment variables for development
# Copy this to .env and customize for your setup

# Environment
ENV=dev  # dev, paper, live
LOG_LEVEL=INFO
DEBUG=false

# Database
DATABASE_URL=postgresql://ibkr_user:ibkr_pass_dev_only@localhost:5432/ibkr_broker
# For SQLite in development (alternative):
# DATABASE_URL=sqlite:///./ibkr_broker.db

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# IBKR Connection
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # 7497 for paper trading, 7496 for live
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=  # Your IBKR paper trading account ID

# Risk Policy
RISK_POLICY_PATH=./config/risk_policy.yml
KILL_SWITCH_ENABLED=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# MCP Server
MCP_HOST=localhost
MCP_PORT=8100

# Dashboard
DASHBOARD_PORT=8080

# Secrets (NEVER commit these - use secret manager in production)
API_SECRET_KEY=  # Generate with: openssl rand -hex 32
JWT_SECRET=  # Generate with: openssl rand -hex 32

# Feature Flags
ENABLE_LIVE_TRADING=false  # MUST be explicitly enabled for live trading
ENABLE_AUTO_COMMIT=false   # MUST remain false until thoroughly tested
