# IBKR Real Connection Configuration
# Per usare questo file: copy .env.ibkr .env

# Broker selection
BROKER_TYPE=ibkr

# IBKR Gateway/TWS settings
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_MODE=paper

# Timeouts
IBKR_CONNECT_TIMEOUT=10
IBKR_READ_TIMEOUT=60

# Reconnection
IBKR_RECONNECT_ENABLED=true
IBKR_RECONNECT_MAX_RETRIES=5
IBKR_RECONNECT_DELAY_BASE=2.0

# Safety (set to true to prevent accidental order submissions)
IBKR_READONLY_MODE=false

# Database
DATABASE_URL=sqlite:///./data/audit.db

# Environment
ENV=paper

# Logging
LOG_LEVEL=INFO
